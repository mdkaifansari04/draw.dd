generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
  username  String
  password  String   
  avatar    String?
  email     String   @unique
  id        String   @unique @default(uuid())
  rooms     Room[]
  messages Message[]
}

model Room {
  id        String   @id @default(uuid())
  name      String
  slug      String
  createdAt DateTime @default(now())

  userId    String
  user      User @relation(fields: [userId], references: [id])
  messages  Message[]
}

model Message {
  id        Int   @unique @default(autoincrement())
  message   String
  createdAt DateTime @default(now())

  userId    String
  roomId    String

  user      User @relation(fields: [userId], references: [id])
  room     Room @relation(fields: [roomId], references: [id])
}